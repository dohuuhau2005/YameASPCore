@{
    // Thông tin sản phẩm cố định (ví dụ: Áo Polo)
    var productId = 1;  // ID của sản phẩm
    var productName = "Áo Polo";
    var productDescription = "Áo Polo cao cấp, chất liệu cotton, dễ chịu khi mặc.";
    var productPrice = 300;  // Giá sản phẩm
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
        }

        .product-images {
            flex: 2;
            padding: 20px;
            height: 450px; /* Chiều cao cố định cho khu vực hình ảnh */
            overflow-y: auto; /* Cho phép cuộn dọc */
            border: 1px solid #ddd;
        }

            .product-images img {
                width: 100%;
                height: auto;
                margin-bottom: 10px;
            }

        .product-details {
            flex: 3;
            padding: 20px;
        }

            .product-details h1 {
                font-size: 24px;
                margin: 0;
                color: #333;
            }

            .product-details p {
                font-size: 16px;
                color: #666;
            }

        .price {
            margin: 20px 0;
        }

        .old-price {
            text-decoration: line-through;
            color: #999;
            margin-right: 10px;
        }

        .new-price {
            font-size: 24px;
            color: #e74c3c;
        }

        .discount-info {
            font-size: 14px;
            color: #999;
        }

        .size-options {
            list-style-type: none;
            padding: 0;
            margin: 20px 0;
        }

            .size-options li {
                margin-bottom: 10px;
            }

            .size-options button {
                background-color: #e74c3c;
                color: #fff;
                border: none;
                padding: 5px 10px;
                cursor: pointer;
            }

        .product-description {
            margin-top: 20px;
        }

            .product-description p {
                margin: 5px 0;
            }

            .product-description ul {
                list-style-type: disc;
                margin-left: 20px;
            }
        .proinfo-images {
            display: flex;
            margin-top: 10px;
        }
        .proinfo-images img {
            width: 60px;
            height: 60px;
            margin-right: 10px;
            border: 1px solid #ddd;
            cursor: pointer;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Product images with scroll feature -->
        <div class="product-images">
            <img src="https://cdn2.yame.vn/pimg/quan-tay-lung-gai-ong-ung-soi-nhan-tao-co-gian-tron-dang-vua-gia-tot-non-branded-30-0024120/8175ca98-0b47-1e01-607f-001baac75292.jpg?w=540&h=756" alt="Product Image 1">
            <img src="https://cdn2.yame.vn/pimg/quan-tay-lung-gai-ong-ung-soi-nhan-tao-co-gian-tron-dang-vua-gia-tot-non-branded-30-0024120/8327f571-bf2e-8000-9179-001bc57d8267.jpg?w=540&h=756" alt="Product Image 2">
            <img src="https://cdn2.yame.vn/pimg/quan-tay-lung-gai-ong-ung-soi-nhan-tao-co-gian-tron-dang-vua-gia-tot-non-branded-30-0024120/07119efd-8313-1f01-6c2f-001baac7529c.jpg?w=540&h=756" alt="Product Image 3">
            <img src="https://cdn2.yame.vn/pimg/quan-tay-lung-gai-ong-ung-soi-nhan-tao-co-gian-tron-dang-vua-gia-tot-non-branded-30-0024120/76ab3a12-c41d-2001-7432-001baac752a8.jpg?w=540&h=756" alt="Product Image 4">
            <img src="https://cdn2.yame.vn/pimg/quan-tay-lung-gai-ong-ung-soi-nhan-tao-co-gian-tron-dang-vua-gia-tot-non-branded-30-0024120/f0c0e9f9-0454-2101-e078-001baac752b3.jpg?w=540&h=756" alt="Product Image 5">
        </div>



        <!-- Product details -->
        <div class="product-details">
            <h1>Vải Trouser Fabric</h1>
            <p>@productDescription</p>

            <div class="price">
                <span class="old-price">397,000 đ</span>
                <span class="new-price"> <p class="price">@productPrice</p></span>
            </div>
            <p class="discount-info">Giá Tốt áp dụng đến hết ngày 31/10/2024</p>

            <!-- Size options -->
            <ul class="size-options">
                <li>Đen, 29 &nbsp;  &nbsp;  &nbsp;<a href="">42 CH còn</a> &nbsp;  &nbsp;  &nbsp; </li>
                <form action="/Cart/AddToCart" method="post">
                    <!-- Cung cấp thông tin sản phẩm và số lượng -->
                    <input type="hidden" name="productId" value="@productId" />
                    <input type="number" name="quantity" value="1" min="1" class="quantity-input" />
                    <button type="submit" class="btn btn-primary">Thêm vào giỏ</button>
                </form>
            </ul>

            <!-- Product description -->
            <div class="product-description">
                <p><strong>Mã số:</strong> #0024120</p>
                <p>Quần Tây Lưng Giải Ống Đứng Sợi Nhân Tạo Co Giãn Trơn Dáng Vừa Giá Tốt Non Branded 30 Vol 24</p>
                <p><strong>Ưu điểm:</strong></p>
                <ul>
                    <li>Vừa vặn, thoải mái form dáng vừa vặn, ống quần không quá ôm hoặc quá rộng.</li>
                    <li>Dễ dàng phối đồ với nhiều loại áo khác nhau.</li>
                    <li>Chất liệu: Trouser fabric bền màu, ít nhăn.</li>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>

